        xmlns:local="clr-namespace:EasyRSA"
        mc:Ignorable="d"
        Title="MsgWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer HorizontalAlignment="Left" Height="337" Margin="23,24,0,0" VerticalAlignment="Top" Width="742">
            <TextBlock x:Name="Chat" TextWrapping="Wrap"/>
        </ScrollViewer>
        <TextBox x:Name="EditMsg" HorizontalAlignment="Left" Height="23" Margin="23,372,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="628"/>
        <Button x:Name="ButtonSendMsg" Content="Отправить" HorizontalAlignment="Left" Margin="671,372,0,0" VerticalAlignment="Top" Width="94" Height="23" Click="Button_Click"/>
    </Grid>
</Window>
